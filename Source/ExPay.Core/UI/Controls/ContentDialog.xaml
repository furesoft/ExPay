<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cc="clr-namespace:ExPay.Core.UI.Controls">

  <Style Selector="cc|ContentDialog">
    <Setter Property="Template">
      <ControlTemplate>
        <Grid>
          <ContentControl Content="{TemplateBinding Content}" />
          <Rectangle Fill="Gray" IsVisible="{TemplateBinding IsOpened}" Opacity="0.3" />

          <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" ZIndex="5000" IsVisible="{TemplateBinding IsOpened}" MaxWidth="{TemplateBinding DialogMaxWidth}" MaxHeight="{TemplateBinding DialogMaxHeigth}">
            <ContentControl Content="{TemplateBinding DialogContent}"
                      />
          </Border>
        </Grid>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="cc|ContentDialog:opened">

  </Style>
  <Style Selector="cc|ContentDialog:closed">

  </Style>
</Styles>