<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="ExPay_Service.Pages.PaymentShippingPage">
  <Grid RowDefinitions="25,*">
    <TextBlock Name="HeaderTb" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">Shipping Address</TextBlock>

    <StackPanel Margin="5" HorizontalAlignment="Center" Grid.Row="1">
      <StackPanel Orientation="Horizontal">
        <TextBox Name="firstNameTb" Margin="5" MinWidth="150" />
        <TextBox Name="secondNameTb" Margin="5" MinWidth="150" />
      </StackPanel>


      <TextBox Name="adressLineTb" Margin="5" />
      <StackPanel Orientation="Horizontal">
        <TextBox Name="postalcodeTb" Margin="5" MinWidth="50" />
        <TextBox Name="cityTb" Margin="5" MinWidth="225" />
      </StackPanel>

      <TextBox Name="phoneTb" Margin="5" />
      <TextBox Name="emailTb" Margin="5" />
    </StackPanel>
  </Grid>
</UserControl>