<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="ExPay_Service.Pages.PaymentShippingPage">
  <Grid RowDefinitions="25,*">
    <TextBlock Name="HeaderTb" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">Shipping Address</TextBlock>

    <WrapPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center" Grid.Row="1">
      <TextBox Name="firstNameTb" Margin="5" MinWidth="300" />
      <TextBox Name="secondNameTb" Margin="5" />

      <TextBox Name="adressLineTb" Margin="5" />
      <TextBox Name="postalcodeTb" Margin="5" />
      <TextBox Name="cityTb" Margin="5" />
    </WrapPanel>
  </Grid>
</UserControl>