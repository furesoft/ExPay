<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExPay_Service.Pages.PaymentMethodsPage">
  <Grid RowDefinitions="35,*">
    <TextBlock Name="HeaderTb" Grid.Row="0" FontSize="20">Payment Methods</TextBlock>

    <ListBox Name="paymentMethodsLb" Grid.Row="1" MinWidth="150" MinHeight="150">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid RowDefinitions="*,*" Margin="5">
            <Image Width="50" Height="50" Source="{Binding Image}" Grid.Row="0" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding Info.Name}" FontSize="25" Grid.Row="1" HorizontalAlignment="Center" />
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel Orientation="Horizontal"  />
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
    </ListBox>
  </Grid>
</UserControl>