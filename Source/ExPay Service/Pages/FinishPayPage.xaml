<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="http://furesoft.ml/expay"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ExPay_Service.Pages.FinishPayPage">
  <Grid RowDefinitions="35,35,35,35,35,35" ColumnDefinitions="*,15,*" HorizontalAlignment="Center">
    <TextBlock Name="paymentMethodLbl" Foreground="Gray" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
    <TextBlock Name="shipToLbl" Foreground="Gray" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
    <TextBlock Name="shippingOptionsLbl" Foreground="Gray" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
    <TextBlock Name="emailLbl" Foreground="Gray" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />
    <TextBlock Name="phoneLbl" Foreground="Gray" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" />

    <ComboBox Name="paymentMethodsCb" Margin="2" Grid.Row="0" Grid.Column="2" MinWidth="200">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <WrapPanel Orientation="Horizontal">
            <Image Width="25" Height="25" Source="{Binding Image}"  />
            <TextBlock Text="{Binding Info.Name}" FontSize="18"  />
          </WrapPanel>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <ComboBox Name="shippingAddressCb" Margin="2"  Grid.Column="2" Grid.Row="1" />
    <ComboBox Name="shippingOptionsCb"  Margin="2" Grid.Column="2" Grid.Row="2" />

    <TextBox Name="emailTb" Margin="2"  Grid.Row="3" Grid.Column="2" />
    <TextBox Name="phoneTb" Margin="2"  Grid.Row="4" Grid.Column="2" />

    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="5" Grid.Column="2">
      <TextBlock Text="Total: " />
      <TextBlock Text="{Binding Details.Total.Amount.Value, Converter={conv:CurrencyConverter}}" />

      <TextBlock Text=" " />
      <TextBlock Text="{Binding Details.Total.Amount.Currency}" />
    </StackPanel>

    <Button Name="detailsBtn" Grid.Row="5" Grid.Column="1">
      Details
    </Button>
  </Grid>
</UserControl>