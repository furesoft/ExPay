<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExPay_Service.Pages.PaymentMethodsPage">
  <Grid RowDefinitions="35,*">
    <TextBlock Name="HeaderTb" Grid.Row="0">Payment Methods</TextBlock>

    <ListBox Name="paymentMethodsLb" Grid.Row="1" MinWidth="150" MinHeight="150">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Info.Name}" />
            <Image Source="{Binding Info.IconUrl}" />
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>