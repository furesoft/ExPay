<Window
     xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="http://furesoft.ml/expay"
     xmlns:dlgs="clr-namespace:ExPay_Service.Dialogs"
    xmlns:pages="clr-namespace:ExPay_Service.Pages"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExPay_Service.Views.PayView"
        Title="ExPay" Height="500" Width="450" WindowStartupLocation="CenterScreen">
  <Grid>
    <conv:ContentDialog conv:DialogService.DialogHost="True" Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Name="cd" DialogMaxWidth="300" DialogMaxHeigth="350">
      <Grid RowDefinitions="100,*,50">
        <TextBlock Name="merchantName" Grid.Row="0" Text="{Binding MerchantInfo.Name}" />

        <pages:FinishPayPage Grid.Row="1" />

        <Grid Grid.Row="2">
          <Button MinWidth="125" MaxWidth="5" HorizontalAlignment="Right" Command="{conv:OpenDialog {x:Type dlgs:PaymentStatusDialog}, AutoCloseTime='00:00:03'}" Content="{conv:String 'Pay'}" />
        </Grid>
      </Grid>
    </conv:ContentDialog>
  </Grid>
</Window>