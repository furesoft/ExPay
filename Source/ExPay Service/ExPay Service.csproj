    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RootNamespace>ExPay_Service</RootNamespace>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>pay.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Dialogs\close.png" />
