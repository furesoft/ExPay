<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <ApplicationIcon>pay.ico</ApplicationIcon>
    <StartupObject />
    <RootNamespace>ExPay_Service</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="bin\**" />
    <Compile Remove="bin\**" />
    <EmbeddedResource Remove="bin\**" />
    <None Remove="bin\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Dialogs\MessageDialog.xaml" />
    <AvaloniaResource Remove="Dialogs\PayDialog.xaml" />
    <AvaloniaResource Remove="Dialogs\TestDialog.xaml" />
    <AvaloniaResource Remove="Pages\PaymentDetailsPage.xaml" />
    <AvaloniaResource Remove="Pages\PaymentMethodsPage.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="close.png" />
    <None Remove="Dialogs\MessageDialog.xaml" />
    <None Remove="Dialogs\PayDialog.xaml" />
    <None Remove="Dialogs\TestDialog.xaml" />
    <None Remove="Pages\PaymentDetailsPage.xaml" />
    <None Remove="Pages\PaymentMethodsPage.xaml" />
    <None Remove="pay.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.3" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.3" />
    <PackageReference Include="Furesoft.Signals" Version="1.0.15" />
    <PackageReference Include="Microsoft.Composition" Version="1.0.31" />
    <PackageReference Include="NLog" Version="4.7.0-rc1" />
    <PackageReference Include="Quamotion.DiscUtils.Registry" Version="0.15.4" />
    <PackageReference Include="Topshelf" Version="4.2.1.218-develop" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\ExPay.Core\ExPay.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="close.png" />
    <EmbeddedResource Include="Dialogs\TestDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Dialogs\PayDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
    <EmbeddedResource Include="pay.ico" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Dialogs\MessageDialog.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Pages\PaymentDetailsPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Pages\PaymentMethodsPage.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <None Update="Locale\de-DE\LC_MESSAGES\ExPay.mo">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Locale\en.mo">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="Locale\en\LC_MESSAGES\ExPay.mo">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
