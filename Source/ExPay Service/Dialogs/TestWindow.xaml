<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExPay_Service.Dialogs.TestWindow"
        xmlns:conv="http://furesoft.ml/expay"
        Title="TestWindow">
  <conv:ContentDialog Background="AliceBlue" BorderBrush="Black" BorderThickness="3" Name="cd" IsOpened="{Binding #toggle.IsChecked, Mode=TwoWay}" DialogMaxWidth="500" DialogMaxHeigth="500">
    <conv:ContentDialog.DialogContent>
      <StackPanel>
        <TextBlock Text="hello world" />
        <ToggleButton IsChecked="{Binding !#cd.IsOpened}" Width="100" Height="100">Hide</ToggleButton>
      </StackPanel>
    </conv:ContentDialog.DialogContent>

    <ToggleButton Name="toggle" Width="100" Height="100" HorizontalAlignment="Left">Show</ToggleButton>
  </conv:ContentDialog>
</Window>