<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="http://furesoft.ml/expay"
             xmlns:dlgs="clr-namespace:ExPay_Service.Dialogs"
             mc:Ignorable="d"
             x:Class="ExPay_Service.Dialogs.PaymentDetailsDialog">
  <Grid>
    <ListBox Items="{Binding Details.DisplayItems}" IsHitTestVisible="False">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid>
            <TextBlock Text="{Binding Name, FallbackValue='TestProduct'}" HorizontalAlignment="Left" />

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
              <TextBlock Text="{Binding Amount.Value, Converter={conv:CurrencyConverter}, FallbackValue=1.99}" />

              <TextBlock Text="{Binding Amount.Currency}" />
            </StackPanel>
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</UserControl>